# Example environment variables for development / production
# Copy to .env and fill in values

# Django
DJANGO_SECRET_KEY=replace-me-with-a-strong-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (optional)
# For production, use a proper DB URL, e.g. postgres://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# External APIs
TAVILY_API_KEY=
OPENWEATHER_API_KEY=
OPENAI_API_KEY=

# Container image name (used by CI/CD)
IMAGE_NAME=ghcr.io/YOUR_GITHUB_ORG_OR_USER/agri-advisor
